{
  "paths": {
    "source": "app/",
    "dist": "build/"
  },
  "browserSync": {
    "mode": "server",
    "baseDir": "build",
    "index": "index.html",
    "watch": []
  },
  "resources": {
    "html": {
      "pattern": "*.{njk,html,nunjucks}",
      "directory": "",
      "assets": {
        "./": "*.{njk,html,nunjucks}"
      },
      "watch": ["app.json", "./.hyperion/*.js"]
    },
    "styles": {
      "pattern": "*.{css,styl,scss,sass,less}",
      "directory": "assets/styles",
      "assets": {
        "main.css": {
          "files": "index.styl",
          "autoload": "resources/assets/styles/autoload/*.css",
          "purify": true
        }
      }
    },
    "images": {
      "pattern": "*.{jpg,png,gif,svg,webp,ico}",
      "directory": "assets/images",
      "assets": {
        "./": "**/*"
      }
    }
  }
}
