.header {
  position: relative;
  height: 50vh;
  margin-bottom: 54px;
  font-size: 26px;
  line-height: 1.34;
  text-transform: uppercase;
}

.header__container {
  position: sticky;
  top: 100px;
  display: flex;
  justify-content: space-between;
}

.footer {
  margin: 160px 0 180px;
}

.container {
  max-width: 1170px;
  margin: 0 auto;
}

