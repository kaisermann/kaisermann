@import './partials/fonts.pcss';
@import './partials/reset.pcss';
@import './partials/animations.pcss';
@import './partials/text.pcss';
@import './partials/page.pcss';

:root {
  --text-primary: #a0a0a0;
  --text-secondary: #fff;
  --font-size: 26px;
  --line-height: 1.4;
}

html {
  font-family: 'VCR OSD Mono', monospace;
  font-weight: normal;
  font-style: normal;
}

body {
  background-color: #000;
  margin: 0;
  overflow: hidden auto;
  animation: turn-on 1.6s linear;
  color: var(--text-primary);
  font-size: var(--font-size);
  line-height: var(--line-height);
  text-shadow: 3px 3px 0 rgba(2, 183, 182, 0.2),
    -3px -3px 0 rgba(183, 2, 2, 0.2);

  &::before,
  &::after {
    content: '';
    display: block;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    pointer-events: none;
  }

  &::before {
    height: 90px;
    background: linear-gradient(
      180deg,
      transparent 0,
      snow 50%,
      hsla(0, 0%, 100%, 0.98) 51%,
      transparent
    );
    animation: vline 8s linear infinite;
    will-change: transform;
    opacity: 0.1;
  }

  &::after {
    height: 100%;
    background-image: linear-gradient(
      0deg,
      rgba(255, 255, 255, 0.03) 50%,
      transparent 0
    );
    background-size: 100% 0.7ch;
  }
}

.page-background {
  pointer-events: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0.03;
}
